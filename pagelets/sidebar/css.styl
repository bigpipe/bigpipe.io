.sidebar
  background: #FFF
  border-right: 1px solid #BBB
  bottom: 0
  box-shadow: 0 0 20px #CCC
  box-sizing: border-box
  font-family: Helvetica Neue, Helvetica, Arial
  font-size: 14px
  left: 0
  line-height: 22px
  overflow-x: hidden
  overflow-y: auto
  padding: 30px 0 30px 30px
  position: fixed
  top: 0
  width: 200px
  z-index: 10

  ul
    padding: 0
    list-style: none

  h3 small
    font-size: 10px
    font-weight: normal
    font-style: italic
