.sidebar
  background: #FFF
  bottom: 0
  box-sizing: border-box
  color: #616B8C
  font-family: "museo-sans",helvetica,arial,sans-serif
  font-size: 14px
  left: 0
  line-height: 22px
  overflow-x: hidden
  overflow-y: auto
  padding: 30px 0
  position: fixed
  text-align: right
  top: 0
  width: 270px
  z-index: 10

  ul
    list-style: none
    padding: 0

    li
      border: 0
      font-size: 15px
      padding: 5px 0 5px 20px

  .what
    text-align: right

    a
      padding: 0

  h2
    font-size: 36px
    font-style: normal
    color: #444
    font-weight: 100
    padding: 12px 0 0 12px
    text-transform: uppercase

  h3
    a
      font-size: 30px
      font-style: normal
      color: #616B8C
      font-weight: 100
      padding: 12px 0 0 12px
      text-transform: uppercase

    small
      color: #959BAE
      margin-right: 10px

  a
    color: #9D8DFF
    display: block
    margin-right: 10px
    padding-right: 5px
    text-decoration: none

    &:hover
      color: #2FE7BE
      transition: color .2s ease-in-out
